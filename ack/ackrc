# lexically sort filenames
--sort-files
--color
--smart-case
--type-set
log=.log
--type-set
django=.py,.html
--type-set
less=.less
--type-set
vim=.vim
--type-set
puppet=.pp
--type-set
fe=.html,.js,.less
--type-set
fea=.html,.js,.less,.css
--type-set
ruby=rake,haml
--type-set
vim=vimrc
--type-set
js=json
--type-set
cucumber=feature
--type-set
css=sass
--type-set
docs=.markdown,.md,.mdown,.rst
--type-set
MARKDOWN=md,mkd,markdown
--type-set
RDOC=rdoc
--ignore-dir=public/media/cache
--ignore-dir=public/static/cache
--ignore-dir=public/assets
--ignore-dir=build/html
--ignore-dir=docs/build
--ignore-dir=migrations
--ignore-dir=log
# Custom folder to ignore
--ignore-dir=coverage
--ignore-dir=doc
--ignore-dir=tmp
--ignore-dir=vendor
# Custom files to ignore
--ignore-file=is:tags
--ignore-file=ext:pdf
