#!/bin/bash
# Open google chrome from command line for OSX/Linux
#
# For Arch: /usr/bin/google-chrome-stable
# Create the symlink to avoid the need for if/else logic e.g.
#
# $sudo ln -s /usr/bin/google-chrome-stable /usr/bin/google-chrome (Linux)
# $sudo ln -s /path/to/Google\ Chrome/ /usr/bin/google-chrome (OSX)
set -e

EXPECTED_ARGS=1

if [ $# -eq $EXPECTED_ARGS ]
then
  open -a Google\ Chrome $1
else
  # Open the default web site (adjust as needed)
  /usr/bin/google-chrome https://duckduckgo.com/
fi
